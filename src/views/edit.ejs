                <div class='form'
                    style="width: 50%; margin: auto; padding: 20px; box-shadow: 0px 0px 10px rgba(0,0,0,0.1);">
                    <form action="/admin/updateUser" method="post">
                        <fieldset>
                            <legend style="font-size: 1.5em; color: #4CAF50; text-align: center;">THAY ĐỔI THÔNG TIN
                            </legend>
                            <div class='input gruop d-none'>
                                <label> Id: </label>
                                <input type="text" name="userId" value="<%= user.customer_id %>">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Tên</label>
                                <input type="text" name="name" value="<%= user.name %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Email</label>
                                <input type="text" name="email" value="<%= user.email %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Số điện thoại</label>
                                <input type="text" name="phone" value="<%= user.phone %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Địa chỉ</label>
                                <input type="text" name="address" value="<%= user.address %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Ngày sinh </label>
                                <input type="text" name="birthday" value="<%= user.birthday %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Vai trò</label>
                                <input type="text" name="role" value="<%= user.role %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Mật khẩu</label>
                                <input type="text" name="password" value="<%= user.pass_word %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input gruop' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;"> Tên tài khoản</label>
                                <input type="text" name="username" value="<%= user.user_name %>"
                                    style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                            </div>
                            <div class='input group' style="margin-bottom: 10px;">
                                <label style="display: block; font-weight: bold;">Hình ảnh</label>
                                <img src="/public/userimg/<%= user.user_img%>" alt="User Image"
                                    style="width: 100px; height: 100px;">
                                <input type="file" class="form-control" name="userimage"
                                    onchange="document.getElementById('userimage').src = window.URL.createObjectURL(this.files[0])">
                            </div>
                            <!-- <td>
                                <img src="/public/userimg/hinh-thien-nhien-3d-002.jpg" alt="User Image"
                                    style="width: 50px; height: 50px;">
                            </td> -->


                            <div style="text-align: center; margin-top: 20px;">
                                <button
                                    style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">SAVE</button>
                            </div>
                        </fieldset>
