                </div>
                <div class="midde_cont">
                    <div class="container-fluid">
                        <div class="row column_title">
                            <div class="col-md-12">
                                <div class="page_title">
                                    <h2>SỬA SẢN PHẨM</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='form'>
                    <form action="/admin/updateProduct" method="post" style="border: 3px solid #098b80; padding: 10px;">
                        <fieldset>
                            <legend style="text-align: center;">Sửa sản phẩm</legend>
                            <div class='input gruop d-none'>
                                <label> Id: </label>
                                <input type="text" name="productId" value="<%= x.product_id %>">
                            </div>
                            <div class='input gruop d-none'>
                                <label> Id: </label>
                                <input type="text" name="oldColor" value="<%= details.color %>">
                            </div>
                            <div class="form-group row">
                                <div class='col-sm-4'>
                                    <label> Product_Name</label>
                                    <input type="text" class="form-control" name="product_name"
                                        value="<%= x.product_name%>">
                                </div>
                                <div class='col-sm-4'>
                                    <label> Id port</label>
                                    <input type="text" name='id_port' class="form-control" value="<%= x.id_port%>" />
                                </div>
                                <div class='col-sm-4'>
                                    <label> Price</label>
                                    <input type="text" name="price" class="form-control" value="<%= x.price %>" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class='col-sm-6'>
                                    <label>Color</label>
                                    <input type="text" name="color" class="form-control" value="<%= details.color%>" />
                                </div>
                                <div class='col-sm-6'>
                                    <label>Quantity of color</label>
                                    <input type="text" name="quantity_of_color" class="form-control"
                                        value="<%= details.quantity_of_color%>" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class='col-sm-6'>
                                    <label> Ảnh 1 </label>
                                    <img src="<%= x.img_top.startsWith('http') ? x.img_top : '/public/productimg/' + x.img_top %>"
                                        alt="Product Image" style="width: 100px; height: 100px;">
                                    <input type="file" class="form-control" name="img_top"
                                        onchange="document.getElementById('img_top').src = window.URL.createObjectURL(this.files[0])">
                                </div>
                                <div class='col-sm-6'>
                                    <label> Ảnh 2</label>
                                    <img src="<%= x.ing_mid.startsWith('http') ? x.ing_mid : '/public/productimg/' + x.ing_mid%>"
                                        alt="Product Image" style="width: 100px; height: 100px;">
                                    <input type="file" class="form-control" name="ing_mid"
                                        onchange="document.getElementById('ing_mid').src = window.URL.createObjectURL(this.files[0])">
                                </div>




                            </div>






                            <div class="form-group row">
                                <div class='col-sm-12'>
                                    <label> Description</label>
                                    <textarea id="motasp" name="description">
                                            <%= x.description%>
                                        </textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button
                                        style="margin-right: 10px; padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">Lưu</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/custom.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('motasp');
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".dropdown-toggle").click(function () {
                $(this).next(".dropdown-menu").toggle();
            });
        });
    </script>


</body>

</html>